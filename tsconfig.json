{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "typeRoots": ["node_modules/@types", "src/types"],
    "outDir": "build",
    "allowJs": false,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  }
}
